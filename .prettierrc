{
  "useTabs": false,
  "singleQuote": true,
  "trailingComma": "none",
  "printWidth": 100,
  "plugins": [
    "prettier-plugin-toml",
    "prettier-plugin-go-template",
    "prettier-plugin-hugo-post",
    "prettier-plugin-tailwindcss"
  ],
  "overrides": [
    {
      "files": ["*.toml"],
      "options": {
        "parser": "toml"
      }
    },
    {
      "files": ["content/**/*.md", "*.md", "*.hugo"],
      "options": {
        "parser": "hugo-post"
      }
    },
    {
      "files": ["*.html"],
      "options": {
        "parser": "go-template"
      }
    }
  ]
}
